{
    "compilerOptions": {
        "allowJs": true,
        "strict": true,
        "outDir": "./build",
        "target": "ESNext",
        "module": "CommonJS",
        "declaration": true,
        "esModuleInterop": true,
        "pretty": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "removeComments": true
    },
    "exclude": ["node_modules", "build"],
    "include": ["src/**/*"]
}
