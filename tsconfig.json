{
    "compilerOptions": {
        "allowJs": true,
        "strict": true,
        "outDir": "./dist",
        "target": "ES2017",
        "module": "CommonJS",
        "declaration": true,
        "esModuleInterop": true,
        "pretty": true,
        "skipLibCheck": true,
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ],
        "baseUrl": "./src",
    },
    "exclude": ["node_modules", "dist"],
    "include": ["src/**/*.ts", "tests/**/*"]
}